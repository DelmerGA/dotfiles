[user]
	name = Han Wei
	email = laughinghan@gmail.com
[merge]
	conflictstyle = diff3
[diff]
	REMOVE-ME-TO-ENABLE-external = /Users/Han/git-opendiff.sh
	tool = Kaleidoscope
[core]
	excludesfile = ~/.gitignore
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[alias]
	ci = commit -v
	st = status
	co = checkout
	br = branch -v
	lg = log --decorate --graph --date=local
	fancy = log --all --decorate --graph --date=local
[rerere]
	enabled = true
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[push]
	default = upstream
